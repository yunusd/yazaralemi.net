@model  List<Category>
<h4 class="font-italic">Kategoriler</h4>
<ol class="list-unstyled mb-0">
    <li>
        <a href="@Url.RouteUrl("ActionOnly", new { controller = "Home", action = "Index" })">
            Tümü
        </a>
    </li>
    @foreach (var item in Model)
    {
        <li><a href="@Url.Action("Index", "Home", new { cid = item.Id, slug = item.Slug })">@item.CategoryName</a></li>
    }
</ol>
