@model List<Post>
@{
    ViewBag.Title = "Home Page";
}

<h3 class="pb-4 mb-4 font-italic border-bottom">
    @ViewBag.Subtitle
</h3>

<div class="blog-post">
    @foreach (var item in Model)
    {
        <h2 class="blog-post-title">@item.Title</h2>
        <p class="blog-post-meta" title="@item.CreatedAt.Value"><a href="#">@item.Author.UserName</a> tarafından @item.CreatedAt.Value.ToShortDateString() tarihinde yazıldı</p>
        @Html.Raw(item.Content)
    }
</div><!-- /.blog-post -->

<nav class="blog-pagination">
    <a class="btn btn-outline-primary" href="@Url.Action("Index", "Home", new { cid = ViewBag.cid, page = ViewBag.PrevPage })">Yeni</a>
    <a class="btn btn-outline-primary" href="@Url.Action("Index", "Home", new { cid = ViewBag.cid, page = ViewBag.NextPage })" tabindex="-1" aria-disabled="true">Eski</a>
</nav>