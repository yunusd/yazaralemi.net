@model List<Post>
@{
    ViewBag.Title = "Home Page";
    string disabledNew = ViewBag.page > 1 ? "" : "disabled";
    string disabledOld = ViewBag.page < ViewBag.pageCount ? "" : "disabled";
}

<h3 class="pb-4 mb-4 font-italic border-bottom">
    @ViewBag.Subtitle
</h3>
<div class="blog-post">
    @foreach (var post in Model)
    {
        <h2 class="blog-post-title">
            <a href="@Url.Action("Index","Post", new { cid = post.CategoryId, pid = post.Id })" class="text-reset">@post.Title</a>
        </h2>
        <p class="blog-post-meta" title="@post.CreatedAt.Value"><a href="#" class="text-secondary">@post.Author.UserName</a> tarafından @post.CreatedAt.Value.ToShortDateString() tarihinde yazıldı</p>
        <p class="blog-post-content-summary">
            @post.ContentSummary
            <br />
            <span><a href="@Url.Action("Index","Post", new { cid = post.CategoryId, pid = post.Id })">devamı için tıkla</a></span>
        </p>
    }
</div><!-- /.blog-post -->

<nav class="blog-pagination">

    <a class="btn btn-outline-primary @disabledOld" href="@Url.Action("Index", "Home", new { cid = ViewBag.cid, page = ViewBag.nextPage })" tabindex="-1" aria-disabled="true">Eski</a>

    <a class="btn btn-outline-primary @disabledNew" href="@Url.Action("Index", "Home", new { cid = ViewBag.cid, page = ViewBag.prevPage })" tabindex="-1" aria-disabled="true">Yeni</a>
</nav>