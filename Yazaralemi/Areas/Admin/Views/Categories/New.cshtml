@model Category
@{
    ViewBag.Title = "Kategori ekle";
    ViewBag.HeaderTitle = "Kategori ekle";
}

@using (@Html.BeginForm("New", "Categories", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card card-primary card-outline">
        <div class="card-body">
            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori Adı" })
                        @Html.ValidationMessageFor(x => x.CategoryName, null, new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <div class="float-right">
                <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslak</button>
                <button type="submit" id="sendPost" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
            </div>
            <a href="@Url.Action("Index","Categories")" class="btn btn-default"><i class="fas fa-times"></i> Vazgeç</a>
        </div>
        <!-- /.card-footer -->
    </div>
    <!-- /.card -->
}